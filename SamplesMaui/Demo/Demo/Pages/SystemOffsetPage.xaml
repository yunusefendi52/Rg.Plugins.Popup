<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:rg="http://rotorgames.com"
              x:Class="Demo.Pages.SystemOffsetPage">
  <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="5,5,5,5" BackgroundColor="Red">
    <ContentView BackgroundColor="White" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
      <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label x:Name="InfoLabel" TextColor="DarkGray"/>
        <Button Text="Close Popup" TextColor="Red" Clicked="OnClose"/>
        <Entry Placeholder="Keyboard Test Entry" PlaceholderColor="DarkGray"/>
      </StackLayout>
    </ContentView>
  </ContentView>
</rg:PopupPage>